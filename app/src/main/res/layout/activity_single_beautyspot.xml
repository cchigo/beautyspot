<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".single_beauty_spot_details.SingleBeautyspot">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone" />
            <TextView
                android:id="@+id/txt_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Connection Problem!!"
                android:visibility="gone" />



            <TextView
                android:id="@+id/spot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="ABC Salon"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/services"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon, Makeup" />

            <TextView
                android:id="@+id/open_close"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open now" />
            <ImageView
                android:id="@+id/spot_image"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/ic_favorite"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/call_button"
                    app:srcCompat="@drawable/ic_phone_black_24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/direction_button"
                    app:srcCompat="@drawable/ic_directions"
                    android:layout_gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <ImageView
                    android:id="@+id/add_to_fav_button"
                    app:srcCompat="@drawable/ic_favorite_border_yellow"
                    android:layout_gravity="end"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/address"
                android:gravity="center_vertical"
                android:padding="8dp"
                tools:text="14, Akanni, Agungi Ajiran Rd"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    app:srcCompat="@drawable/ic_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    app:srcCompat="@drawable/ic_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    app:srcCompat="@drawable/ic_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    app:srcCompat="@drawable/ic_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <ImageView
                    app:srcCompat="@drawable/ic_favorite"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </LinearLayout>

            <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <ImageView
                       app:srcCompat="@drawable/ic_profile"
                       android:layout_width="20dp"
                       android:layout_height="20dp"/>
                   <TextView
                       android:id="@+id/no_of_ratings"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:textStyle="bold"
                       tools:text="133"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>





</RelativeLayout>